<?xml version='1.0' encoding='utf-8'?>
<widget id="xxx" version="0.2020.10" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Origami</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="xxx" href="xxx">
        Aykun Haddeler
    </author>
    <content src="index.html" />
    <access allows-arbitrary-loads-for-media="true" allows-arbitrary-loads-in-web-content="true" allows-local-networking="true" origin="*" />
    <allow-intent href="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*" />
	<icon src="res/icon.png" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#1d1d1d" />
    <preference name="APPCENTER_ANALYTICS_ENABLE_IN_JS" value="true" />
    <platform name="android">
        <allow-intent href="market:*" />
		<preference name="CodePushDeploymentKey" value="xxx" />
		<preference name="APP_SECRET" value="xxx" />
		<resource-file src="google-services.json" target="app/google-services.json" />
		<icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
    </platform>
    <platform name="ios">
        <preference name="APP_SECRET" value="xxx" />
        <preference name="CodePushDeploymentKey" value="xxx" />
        <preference name="BackupWebStorage" value="local" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-console" spec="~1.1.0" />
    <plugin name="cordova-plugin-device" spec="~2.0.3" />
    <plugin name="cordova-plugin-file" spec="~6.0.2" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.2" />
    <plugin name="cordova-plugin-geolocation" spec="~4.0.2" />
    <plugin name="cordova-plugin-appcenter-analytics" spec="~0.5.1" />
    <plugin name="cordova-plugin-appcenter-crashes" spec="~0.5.1" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.4" />
    <plugin name="cordova-plugin-statusbar" spec="~2.4.3" />
    <plugin name="phonegap-plugin-push" spec="^2.3.0">
        <variable name="SENDER_ID" value="12345" />
    </plugin>
    <plugin name="cordova-plugin-media-capture" spec="^3.0.3">
        <variable name="CAMERA_USAGE_DESCRIPTION" value=" To share moments with others" />
        <variable name="MICROPHONE_USAGE_DESCRIPTION" value=" To share moments with others" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value=" To share moments with others" />
    </plugin>
    <plugin name="cordova-plugin-camera" spec="^4.1.0">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="The app would like to access the camera when you attach photos to content." />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="The app would like to access the photo library when you attach images to content." />
    </plugin>
    <plugin name="cordova-plugin-inappbrowser" spec="^3.2.0" />
    <plugin name="cordova-plugin-video-editor" spec="^1.1.3" />
    <plugin name="cordova-plugin-app-event" spec="^1.2.2" />
    <plugin name="cordova-plugin-dialogs" spec="^2.0.2" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.7.1" />
    <plugin name="cordova-plugin-code-push" spec="^1.12.2" />
    <plugin name="cordova-plugin-zip" spec="^3.1.0" />
    <plugin name="cordova-plugin-badge" spec="^0.8.8" />
</widget>
